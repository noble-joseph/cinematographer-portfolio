{
  "kind": "collectionType",
  "collectionName": "journeys",
  "info": {
    "singularName": "journey",
    "pluralName": "journeys",
    "displayName": "Journey",
    "description": "Field logs, travel and motorsport journeys"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "seo": {
      "type": "component",
      "component": "shared.seo"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Motorsport Log",
        "Travel Field Note",
        "BTS",
        "Design Note"
      ]
    },
    "date": {
      "type": "date"
    },
    "location": {
      "type": "string"
    },
    "excerpt": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "distanceKm": {
      "type": "integer"
    },
    "elevationGain": {
      "type": "integer"
    },
    "vehicle": {
      "type": "string"
    },
    "terrain": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "relatedProject": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::project.project"
    }
  }
}